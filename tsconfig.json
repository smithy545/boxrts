{
    "compilerOptions": {
        "module": "es2020",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "static",
        "target": "es2015",
        "baseUrl": "client",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node"
    },
    "include": [
        "client/**/*"
    ]
}